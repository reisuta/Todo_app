<%= provide(:title, "カテゴリー登録画面") %>
<%= form_with(model: @category, local: true) do |f| %>
  <%= render "shared/error_messages", model: @category %>
  <%= f.label :name, 'カテゴリー名', class: 'form-label background-color' %>
  <%= f.text_field :name, class: 'form-control less-length' %>
  <br>
  <br>
  <%= f.submit "クリア", type: :reset, class: 'btn btn-light' %>
  <%= f.submit "登録", class: 'btn btn-primary' %>
<% end %>